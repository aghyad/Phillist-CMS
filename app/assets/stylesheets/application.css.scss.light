    }
    &.selected a {
      background: #666;
	  color: #eee;
    }
    a:hover {
      background: #999;
	  //color: #333;
    }
  }
}

ul.topmenu li ul {
  visibility: hidden; 
  list-style: none;
  padding: 0px;
}

ul.topmenu li:hover ul {
  visibility: visible;
}


ul.topmenu li ul li {
  float: left;
  a {
    display: block;
    color: #333;
    text-decoration: none;
    background: #ddd;
  }
  &.selected a {
    background: #666;
    color: #eee;
  }
  a:hover {
    background: #999;
  }
}






