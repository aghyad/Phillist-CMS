#menu ul {
  list-style: none;
  padding: 0px;
  li {
    float: left;
    margin-right: 10px;
	margin-left: 0px;
    a {
      display: block;
	  color: #333;
      padding: 5px 10px;
      text-decoration: none;
	  font-size: 18px;
